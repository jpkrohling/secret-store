-- #

CREATE KEYSPACE IF NOT EXISTS secretstore WITH replication = {'class': 'SimpleStrategy', 'replication_factor': 1}

-- #

CREATE TABLE IF NOT EXISTS secretstore.tokens (
    id uuid PRIMARY KEY,
    refreshToken varchar,
    secret varchar,
    principal varchar,
    attributes map<varchar, varchar>,
    expiresAt timestamp,
    createdAt timestamp,
    updatedAt timestamp
);

-- #

CREATE INDEX IF NOT EXISTS ON secretstore.tokens (principal);

-- #
